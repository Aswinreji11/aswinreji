<html lang="en" data-darkreader-mode="dynamic" data-darkreader-scheme="dark">
<link rel="stylesheet" href="/login&signup.css">
<%- include('./partials/userpartials/header.ejs') %>

	<body class="mainbody">
		<!-- <section class="container"> -->
		<div class="loginandsignup">
			<form action="/login" method="post">
				<h2>Log In</h2>
				<p>Enjoy explore </p>
				<hr>

				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
						</div>
						<input type="text" id="user" class="form-control" name="name" placeholder="Username"
							autocomplete="off" required="required">
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<input type="password" id="pass" class="form-control" name="password" placeholder="Password"
							required="required">
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="form">
							<button type="submit" class="btn btn-primary btn-lg">Log In</a></button>
							<br>
							<br>
						</div>
			</form><br>
			<div class="text-center">Need an account? <a href="/signup">Sign Up</a></div>
		</div>
		<br>

		<% if(loginerror){ %>
			<span id="loginerr" class="text-danger" style="font-size: 12px;font-weight: bold;">
				<%= loginerror %>
			</span>
			<% } %>


				<!-- </section> -->

				<script>

					reload()
					const errContainer = document.getElementById('loginerr');
					function reload() {
						setTimeout(() => {
							errContainer.innerHTML = "";
						}, 2000);
					}


				</script>

	</body>

</html>