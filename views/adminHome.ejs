<!DOCTYPE html>
<html lang="en">

<%- include('./partials/adminpartials/header.ejs') %>

  <body id="page-top">

    <%- include('./partials/adminpartials/navbar.ejs') %>
      <div>
        <p id="adminMsg" class="text-center text-danger" style="padding-inline-end: 2rem;">
          <%=  userDeleted %>
        </p>
      </div>


      <!-- Page Wrapper -->
      <div id="wrapper">
        <!-- Sidebar -->
        <%- include('./partials/adminpartials/sidebar.ejs') %>
        
        

          <div class="sticky-div bg-white">
            <table class="table">
              <thead>
                <tr>
                  <th width="100px">No.</th>
                  <th width="300px">Name</th>
                  <th width="600px">Email</th>
                  <th width="200px">Delete User</th>
                  <th width="200px">Edit User</th>
                </tr>
              </thead>
              <tbody>
                <% if(user.length){ for(var i=0; i< user.length; i++) {%>
                  
                  <tr>
                    <th scope="row">
                      <%= (i+1) %>
                    </th>


                    <td>
                     <%= user[i].name%>
                    </td>

                    <td>
                      <%= user[i].email%>
                    </td>

                    <td><input type="button" id="userbtn"><a style="text-decoration: none;" href="/admin/delete-user?name=<%= user[i].name %>">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-trash" viewBox="0 0 16 16">
                            <path
                              d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path
                              d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                          </svg>
                        </a>
                    </td>
                    <td><button id="userbtn" ><a href="/admin/edit-user?name=<%= user[i].name %>">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path
                              d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                              d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                          </svg>
                        </a></button>             
                    </td>
                  </tr>
                  <% } }else{ %>
                    <tr>
                      <td colspan="3">No user found kindly check the spelling</td>
                    </tr>
                    <% } %>

              </tbody>
            </table>
          </div>
          <!-- End of Page Wrapper -->

          <%- include('./partials/adminpartials/plugins') %>

  </body>

</html>

<script>


  reload()

  const adminMsg = document.getElementById('adminMsg')

  function reload() {
    setTimeout(() => {
      adminMsg.innerHTML = ''
    }, 2000)
  }


  function hidden(){
    const username = document.getElementById('hidden')

    username.style.display = 'none'

  }
</script>